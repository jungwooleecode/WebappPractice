#:set s dp(150)
<CanvasExample1>:
    canvas:
        Rectangle:
            pos: self.center_x-s/2, self.center_y-s/2
            size: s,s

        Ellipse:
            pos: 200,500
            size: s, s/2

        Line:
            points: (0,0, self.width/4, 100, self.width/2, 0, self.width*3/4, 100, self.width,0)
            width:2

<CanvasExample2>:
    canvas:
        Line:
            points: (self.width/2, 0, self.width/2, self.height)
            width:2
        Line:
            points:(0, self.height/2, self.width, self.height/2)
            width:2

<CanvasExample3>:
    canvas:
        Color:
            rgba: 0,1,0,1
        Line:
            circle: (200,200,100) # center_x, center_y, radius
            width: 2
        Line:
            ellipse: (500,300,200,100) # center_x, center_y, radius x, radius y
            width: 2
        Color:
            rgba: 1,0,0, 0.5
        Line:
            rectangle: (800,500,300,200) # x y w h
            width: 2

