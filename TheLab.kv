<WidgetsExample>:
    cols:3

    ToggleButton:
        text:"OFF"
        on_state: root.on_toggle_button_state(self)
        size_hint: None, 1
        width:"100dp"
        

    Button:
        text: "Count"
        on_press: root.on_button_click()
        disabled: not root.count_enabled


    Label:
        text: root.my_text
        font_name:"fonts/amatic.ttf"
        font_size:100

    Switch:
        id: my_switch
        on_active: root.on_switch_active(self)
        size_hint: None, 1
        width:"100dp"
        active: True

    Slider:
        id: my_slider
        min:0
        max:100
        value: 50
        orientation: "vertical"
        #on_value: root.on_slider_value(self)
        disabled: not my_switch.active

    BoxLayout:
        orientation: "vertical"
        Label:
            text: str(int(my_slider.value))
        ProgressBar:
            max:100
            value: my_slider.value

    TextInput:
        id: my_text_input
        size_hint: None, 1
        width:"100dp"
        text: root.text_input_str
        multiline: False
        on_text_validate: root.on_text_validate(self)

    Label:
        text: "Your name is "+root.text_input_str




