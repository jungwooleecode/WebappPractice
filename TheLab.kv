WidgetsExample:

<WidgetsExample>:
    cols:3

    ToggleButton:
        text:"OFF"
        on_state: root.on_toggle_button_state(self)
        size_hint: None, 1
        width:"100dp"

    Button:
        text: "Count"
        on_press: root.on_button_click()
    Label:
        text: root.my_text
        font_name:"fonts/amatic.ttf"
        font_size:100


<PageLayoutExample@PageLayout>:
    MainWidget:
    GridLayoutExample:
    AnchorLayoutExample:
    BoxLayoutExample:



<ScrollViewExample@ScrollView>:
    StackLayoutExample:
        size_hint: 1, None
        height: self.minimum_height

<StackLayoutExample>:
    # left-right top-bottom
    # orientation: "rl-bt"
    padding: ("20dp", "20dp", "20dp", "20dp")
    spacing: "20dp", "20dp"

<GridLayoutExample>:
    #rows
    #cols
    cols:2
    Button:
        text: "A"
    BoxLayoutExample:
    Button:
        text: "C"
    Button:
        text: "D"
    Button:
        text: "E"
    Button:
        text: "F"

<AnchorLayoutExample>:
    #right, left, center
    anchor_x: "center"
    #botton, top, center
    anchor_y: "top"
    BoxLayout:
        size_hint: .2, .2
        Button:
            text:"A"

        Button:
            text:"B"


<BoxLayoutExample>:
    orientation: "horizontal"
    Button:
        text: "A"
       
        size_hint: .5, .5

        # size: "40dp","40dp"
        # width: "100dp"
        # height: "60dp"
        # x, center_x, right
        # y, center_y, top
        # pos_hint:{"x": .5}

    BoxLayout:
        orientation: "vertical"
        spacing: "10dp"
        Button:
            text: "B1"
        Button:
            text: "B2"
        Button:
            text: "B3"
        Button:
            text: "B4"
    Button:
        text: "C"


<MainWidget>:
    Button:
        text: "Hello"
        size: "70dp", "40dp"
        pos: "100dp", "200dp"
        color: 1,0,0,1

    Button:
        text: "Whatsup"
        size: "70dp", "40dp"
        pos: "200dp", "200dp"
        color: 0,0,1,1